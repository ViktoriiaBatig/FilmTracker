<div class="container">
  <div class="row">
    <div class="col-md-8 offset-md-2">
      <div class="card my-5">
        <div class="card-body">
          <h1 class="card-title mb-4">Edit Film</h1>
          <%= form_for @film, html: { class: "form" } do |f| %>
            <div class="form-group">
              <%= f.label :name, class: "form-label" %>
              <%= f.text_field :name, class: "form-control" %>
            </div>
            <div class="form-group">
              <%= f.label :year, class: "form-label" %>
              <%= f.text_field :year, class: "form-control" %>
            </div>
            <div class="form-group">
              <%= f.label :describtion, class: "form-label" %>
              <%= f.text_area :describtion, class: "form-control" %>
            </div>
            <div class="form-group">
              <%= f.label :rating, class: "form-label" %>
              <%= f.text_field :rating, class: "form-control" %>
            </div>
            <div class="form-group">
              <%= f.label :actor, class: "form-label" %>
              <%= f.text_field :actor, class: "form-control" %>
            </div>
            <div class="form-group">
              <%= f.label :director, class: "form-label" %>
              <%= f.text_field :director, class: "form-control" %>
            </div>
            <div class="form-group">
              <%= f.label :length, class: "form-label" %>
              <%= f.text_field :length, class: "form-control" %>
            </div>
            <div class="mt-3">
              <%= f.submit "Update Film", class: "btn btn-secondary" %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>